<Window x:Class="MdDisplay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Markdown Viewer" Height="600" Width="800"
        Closing="Window_Closing"
        Background="#E6F2FF">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="txtFilePath" Grid.Column="0" Margin="0,0,10,0" VerticalContentAlignment="Center"/>
            <Button x:Name="btnBrowse" Grid.Column="1" Content="Parcourir..." Click="BtnBrowse_Click" Padding="10,2" HorizontalAlignment="Right"/>
        </Grid>
        
        <WebBrowser x:Name="webBrowser" Grid.Row="1" Margin="10,0,10,10"/>
    </Grid>
</Window>