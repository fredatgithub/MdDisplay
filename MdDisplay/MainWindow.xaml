<Window x:Class="MdDisplay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Markdown Viewer" Height="600" Width="800"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Margin="10" Orientation="Horizontal">
            <TextBox x:Name="txtFilePath" Width="400" Margin="0,0,10,0" VerticalContentAlignment="Center"/>
            <Button x:Name="btnBrowse" Content="Parcourir..." Click="BtnBrowse_Click" Padding="10,2" Margin="0,0,10,0"/>
        </StackPanel>
        
        <WebBrowser x:Name="webBrowser" Grid.Row="1" Margin="10,0,10,10"/>
    </Grid>
</Window>